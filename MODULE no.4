Module Module1

    Sub Main()
        Dim string1, nextchar, string2 As String
        Dim counter As Integer
        string1 = ""
        nextchar = ""
        string2 = ""
        counter = 0

        Console.Write("Kindly enter the string: ")
        string1 = Console.ReadLine
        For counter = 1 To Len(string1)
            nextchar = Mid(string1, counter, 1)
            If nextchar >= LCase("A") And nextchar <= LCase("Z") Then
                string2 = string2 + nextchar
            Else

                string2 = string2 + "*"
            End If
        Next
        Console.WriteLine("The final output is: " & string2)
        Console.ReadKey()
    End Sub

End Module
